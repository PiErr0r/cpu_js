{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 

    "noUnusedLocals": true, 
    "noImplicitReturns": true, 

    "moduleResolution": "node",
    "types": ["node"], 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "Canvas/*": ["src/canvas/*"],
      "Geometry/*": ["src/geometry/*"],
      "Lib/*": ["src/lib/*"],
      "Particle/*": ["src/particle/*"]
    }
  }
}
